<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#c48d44" />
             <stroke
		        android:width="3dp"
		        android:color="#FFFFFC" />
            <corners
                android:radius="14dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFB759" />
             <stroke
		        android:width="3dp"
		        android:color="#FFFFFC" />
            <corners
                android:radius="14dp" />
            <padding
		        android:bottom="0dp"
		        android:left="0dp"
		        android:right="0dp"
		        android:top="0dp" />
        </shape>
    </item>
</selector>

